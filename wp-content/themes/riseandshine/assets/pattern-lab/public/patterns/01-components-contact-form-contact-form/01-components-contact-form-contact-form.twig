<div class="contact-form">
  <div class="container">
    <div class="contact-form__wrap">
      <h2 class="contact-form__title">send us<br> a message</h2>
      
      <div class="contact-form__form">
        <form action="" method="POST">
          <div class="form-list">
            <div class="form-row">
              <div class="form-item">
                <input type="text"  placeholder="first name">
              </div>

              <div class="form-item">
                <input type="email"  placeholder="email address">
              </div>   
            </div>

            <div class="form-row">
              <div class="form-item">
                <input type="number"  placeholder="last name">
              </div>
              
              <div class="form-item">
                <input type="number"  placeholder="phone">
              </div>
            </div>

            <div class="form-row">
              <div class="form-item">
                <textarea placeholder="message"></textarea>
              </div>
            </div>

            <div class="form-row">
              <div class="form-item">
                <input type="text"  placeholder="What is the first letter of rise?"></input>
              </div>
            
              <div class="form-item">
                <button class="btn" href="#"><span>submit<i class="icon-arrow"></i></span></button>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
